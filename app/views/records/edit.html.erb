<% # container for a single doc -%>
<% doc = SolrDocument.new( resource.to_solr ) %>
<div class="document <%= render_document_class doc %>">

    <% if resource.is_a?(TuftsTemplate) %>
      <%= link_to 'Index of Templates', templates_path, class: 'pull-right' %>
    <% end %>

    <% if resource.has_thumbnail? %>
      <div class="document-thumbnail">
        <img src="<%= download_path(resource.id, datastream_id: 'Thumbnail.png') %>">
      </div>
    <% end %>

    <h1><%= edit_record_title %></h1>
    <%= render :partial=>'records/form', locals: {record: resource}  %>

</div>
