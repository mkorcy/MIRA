<%= form_for @record, :url=>record_attachment_path(@record, 'Archival.video') do |f| %>
  <h4>Video</h4>
  <input class="fileupload" type="file" name="files[Archival.video]" data-exists="<%=!@record.datastreams['Archival.video'].new?%>">
  <div class="file btn">
    <%= @record.datastreams['Archival.video'].new? ? 'Upload Archival.video' : 'Replace Archival.video' %>
    <i class="icon-upload"></i>
  </div>
  <div id="progress" class="progress progress-striped">
      <div class="bar" style="width: 0%;"></div>
  </div>
<% end %>

